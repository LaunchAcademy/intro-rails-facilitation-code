<p id="notice"><%= notice %></p>

<h1>Wizards</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wizards.each do |wizard| %>
      <tr>
        <td><%= wizard.name %></td>
        <td><%= wizard.title %></td>
        <td><%= wizard.age %></td>
        <td><%= link_to 'Show', wizard %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New Wizard', new_wizard_path %>